<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/calculator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/editShowNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/text_field_grey"
            android:ems="10"
            android:gravity="bottom|right|top"
            android:hint="0"
            android:inputType="numberDecimal"
            android:textColor="@color/textfield_color"
            android:textSize="48sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buAC"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buClean"
                    android:text="AC"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/buPlusOrMinus"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buttonEvent"
                    android:text="+/-"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/buPercent"
                    android:layout_width="99dp"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buPercent"
                    android:text="%"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/buDivision"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/arithmetic_colour"
                    android:fontFamily="casual"
                    android:onClick="operatorEvent"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bu7"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buttonEvent"
                    android:text="7"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/bu8"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buttonEvent"
                    android:text="8"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/bu9"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buttonEvent"
                    android:text="9"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/buTimes"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/arithmetic_colour"
                    android:fontFamily="casual"
                    android:onClick="operatorEvent"
                    android:text="x"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bu4"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buttonEvent"
                    android:text="4"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/bu5"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buttonEvent"
                    android:text="5"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/bu6"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buttonEvent"
                    android:text="6"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/buMinus"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/arithmetic_colour"
                    android:fontFamily="casual"
                    android:onClick="operatorEvent"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bu1"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buttonEvent"
                    android:text="1"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/bu2"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buttonEvent"
                    android:text="2"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/bu3"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/text_field_grey"
                    android:elegantTextHeight="false"
                    android:fontFamily="casual"
                    android:onClick="buttonEvent"
                    android:text="3"
                    android:textColor="#838383"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/buPlus"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/arithmetic_colour"
                    android:fontFamily="casual"
                    android:onClick="operatorEvent"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/white">

            <Button
                android:id="@+id/bu0"
                android:layout_width="60pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/text_field_grey"
                android:elegantTextHeight="false"
                android:fontFamily="casual"
                android:onClick="buttonEvent"
                android:text="0"
                android:textColor="#838383"
                android:textSize="24sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/buDot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/text_field_grey"
                android:elegantTextHeight="false"
                android:fontFamily="casual"
                android:onClick="buttonEvent"
                android:text="."
                android:textColor="@color/textfield_color"
                android:textIsSelectable="false"
                android:textSize="24sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/buEqual"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/arithmetic_colour"
                android:fontFamily="casual"
                android:onClick="buEqual"
                android:text="="
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>
</LinearLayout>
</LinearLayout>